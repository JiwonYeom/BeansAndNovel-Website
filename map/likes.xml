<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
"-//mybatis.org/DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="likes">
	
	<select id="selectCheckSY" resultType="int" parameterType="Like">
		SELECT COUNT(no)
		FROM likes
		WHERE user_no=#{userNo} and comment_no=#{commentNo}
	</select>
	
	<select id="selectTotalSY" resultType="int" parameterType="int">
	SELECT COUNT(no) count
	FROM likes
	WHERE comment_no = #{commentNo}
	</select>

	<insert id="insertSY" parameterType="Like">
		INSERT INTO likes(no,regdate,comment_no, user_no)
		VALUES(likes_seq.nextval,systimestamp,#{commentNo},#{userNo})
	</insert>

	<delete id="deleteSY" parameterType="Like">
		DELETE likes
		WHERE user_no=#{userNo} AND comment_no=#{commentNo}
	</delete>

	
</mapper>